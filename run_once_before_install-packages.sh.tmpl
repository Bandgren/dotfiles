#!/bin/bash

set -e

echo "ğŸº Setting up Homebrew and packages..."

# Check if Homebrew is installed
if ! command -v brew &> /dev/null; then
    echo "ğŸ“¦ Homebrew not found. Installing Homebrew..."
    /bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh)"
    
    # Add Homebrew to PATH for this script
    if [[ $(uname -m) == "arm64" ]]; then
        # Apple Silicon
        eval "$(/opt/homebrew/bin/brew shellenv)"
    else
        # Intel
        eval "$(/usr/local/bin/brew shellenv)"
    fi
else
    echo "âœ… Homebrew is already installed"
fi

# Update Homebrew
echo "ğŸ”„ Updating Homebrew..."
brew update

# Install packages from Brewfile
echo "ğŸ“¦ Installing packages from Brewfile..."
if [ -f "{{ .chezmoi.sourceDir }}/Brewfile" ]; then
    brew bundle --file="{{ .chezmoi.sourceDir }}/Brewfile" --no-lock
    echo "âœ… All packages installed successfully!"
else
    echo "âš ï¸  Warning: Brewfile not found at {{ .chezmoi.sourceDir }}/Brewfile"
    exit 1
fi

# Cleanup
echo "ğŸ§¹ Cleaning up..."
brew cleanup

echo "ğŸ‰ Setup complete!"
